{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs", 
    "lib": [ "dom","es6" ],
    "outDir": "./dist",
    "rootDir": "src",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
  },
  "exclude": [ "node_modules", "dist" ],
  "include": [ "src/**/*.ts", "index.ts" ]
}
